# Dev proxy: API (FastAPI) — mirrors deploy/nginx/api.conf.template
# Routes https://api.local:8443 -> host machine :8000
# LAN devices use https://<LAN_IP>:8443

server {
    listen 80;
    server_name api.local;

    location / {
        return 301 https://$server_name:8443$request_uri;
    }
}

server {
    listen 8443 ssl default_server;
    http2 on;
    server_name api.local;

    ssl_certificate /etc/nginx/certs/cert.pem;
    ssl_certificate_key /etc/nginx/certs/key.pem;

    # Limits (same as production)
    client_max_body_size 6m;
    server_tokens off;

    # Security headers (same as production)
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Content-Security-Policy "default-src 'none'; frame-ancestors 'none'" always;

    # Strip security headers from upstream (FastAPI sets them too — nginx is authoritative)
    proxy_hide_header Strict-Transport-Security;
    proxy_hide_header X-Content-Type-Options;
    proxy_hide_header X-Frame-Options;
    proxy_hide_header X-XSS-Protection;
    proxy_hide_header Referrer-Policy;
    proxy_hide_header Content-Security-Policy;

    # Proxy settings
    proxy_http_version 1.1;
    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # Static uploads (banners) — image-appropriate headers
    location /uploads/ {
        proxy_pass http://host.docker.internal:8000;

        # Override server-level security headers for static assets
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header Cache-Control "public, max-age=86400" always;
        add_header Access-Control-Allow-Origin "*" always;
    }

    # API -> FastAPI on host
    location / {
        proxy_pass http://host.docker.internal:8000;
        proxy_intercept_errors on;
        error_page 502 503 504 = @backend_down;
    }

    # Return JSON error with CORS headers when backend is unreachable
    location @backend_down {
        default_type application/json;
        add_header Access-Control-Allow-Origin "https://${LAN_IP}" always;
        add_header Access-Control-Allow-Methods "GET, POST, PATCH, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Authorization, Content-Type, X-Kiosk-Session" always;
        return 502 '{"error":"Service temporarily unavailable"}';
    }
}

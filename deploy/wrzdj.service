[Unit]
Description=WrzDJ Application Stack
Requires=docker.service
After=docker.service network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/wrzdj/deploy
User=wrzdj
Group=wrzdj
ExecStart=/usr/bin/docker compose --env-file /opt/wrzdj/deploy/.env up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=120

# Sandboxing â€” limit blast radius if service is compromised
NoNewPrivileges=yes
ProtectHome=yes
PrivateTmp=yes
ProtectKernelTunables=yes
ProtectKernelModules=yes
ProtectKernelLogs=yes
ProtectControlGroups=yes
RestrictRealtime=yes

[Install]
WantedBy=multi-user.target
